<div class="container">
    <h1>Add New Recipe</h1><br>
    <form id="addRecipeForm" onsubmit="return validateForm()" method="post" action="/Home/Addingproduct">
        <div class="form-group">
            <label for="recipeName">Recipe Name:</label><br>.
            <input type="text" id="recipeName" name="recipeName" required>
        </div>
        <div class="form-group">
            <label for="recipePrice">Price:</label><br>
            <input type="text" id="recipePrice" name="recipePrice">
        </div>
        <div class="form-group">
            <label for="recipeImage">Image:</label><br>
            <input type="file" id="recipeImage" name="recipeImage">
        </div>
        <div class="form-group">
            <label for="description">Description:</label><br>
            <textarea id="description" name="description" required></textarea>
        </div>
        <div class="form-group">
            <label for="ingredients">Ingredients:</label><br>
            <textarea id="ingredients" name="ingredients" required></textarea>
        </div>

        <button type="submit"id="BTN">AddRecipe</button>
    </form>
</div>
